{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "BookedReductionsKL",
  "type": "object",
  "required": [
    "version",
    "VMSHeader",
    "Header2",
    "H2"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "VMSHeader": {
      "type": "object",
      "required": [
        "RecordType",
        "IntegrationObjectName",
        "FileVersion",
        "VMSInstanceCode",
        "PlanningMarketCode",
        "MainCompany",
        "SequenceNumber",
        "VMSTransactionId",
        "TransactionDate",
        "TransactionTime"
      ],
      "properties": {
        "RecordType": {
          "type": "string",
          "pattern": "^.*$"
        },
        "IntegrationObjectName": {
          "type": "string",
          "pattern": "^.*$"
        },
        "FileVersion": {
          "type": "integer"
        },
        "VMSInstanceCode": {
          "type": "string",
          "pattern": "^.*$"
        },
        "PlanningMarketCode": {
          "type": "integer"
        },
        "MainCompanyCode": {
          "type": "string",
          "pattern": "^.*$"
        },
        "SequenceNumber": {
          "type": "integer"
        },
        "VMSTransactionID": {
          "type": "string",
          "pattern": "^.*$"
        },
        "TransactionDate": {
          "type": "string",
          "pattern": "^.*$"
        },
        "TransactionTime": {
          "type": "string",
          "pattern": "^.*$"
        }
      }
    },
    "Header2": {
      "type": "object",
      "required": [
        "RecordType",
        "PMCurrencyCode"
      ],
      "properties": {
        "RecordType": {
          "type": "string",
          "pattern": "^.*$"
        },
        "PMCurrencyCode": {
          "type": "string",
          "pattern": "^.*$"
        }
      }
    },
    "H2": {
      "type": "object",
      "required": [
        "ReductionHeader",
        "Details"
      ],
        "ReductionHeader": {
          "type": "array",
          "required": [
            "RecordType",
            "BoreNumber",
            "ModuleCode",
            "Location",
            "FiscalCompany",
            "FiscalCurrency",
            "EOP",
            "BookedReductionCreationDate",
            "BookedReductionSentDate",
            "OrgModuleCode"
          ],
          "properties": {
            "RecordType": {
              "type": "string",
              "pattern": "^.$"
            },
            "BoreNumber": {
              "type": "string",
              "pattern": "^.$"
            },
            "ModuleCode": {
              "type": "string",
              "pattern": "^.$"
            },
            "Location": {
              "type": "string",
              "pattern": "^.$"
            },
            "FiscalCompany": {
              "type": "string",
              "pattern": "^.$"
            },
            "FiscalCurrency": {
              "type": "string",
              "pattern": "^.$"
            },
            "EOP": {
              "type": "boolean"
            },
            "BookedReductionCreationDate": {
              "type": "string", //date
              "pattern": "^.$"
            },
            "BookedReductionSentDate": {
              "type": "string", //date
              "pattern": "^.$"
            },
            "OrgModuleCode": {
              "type": "integer"
            }
          }
        },
        "Details": {
          "type": "array",
          "required": [
            "RecordType",
            "OrderNumber",
            "Season",
            "Department",
            "Index",
            "ColourId",
            "ReducedPieces",
            "NewPriceInFiscalCurrency",
            "OldPriceInFiscalCurrency",
            "TotalPriceInFiscalCurrency",
            "NotePosition",
            "IBMSizeCode",
            "SizeScaleCode",
            "SDSSizeCode",
            "CorporateBrandId",
            "ProductId",
            "ArticleId",
            "PriceTagProductNumber",
            "PriceTagArticleNumber"
          ],
          "properties": {
            "RecordType": {
              "type": "string",
              "pattern": "^.$"
            },
            "OrderNumber": {
              "type": "string",
              "pattern": "[1-9][0-9]{5}"
            },
            "Season": {
              "type": "string",
              "pattern": "^.$"
            },
            "Department": {
              "type": "string",
              "pattern": "^.$"
            },
            "Index": {
              "type": "string",
              "pattern": "^.$"
            },
            "ColourId": {
              "type": "string",
              "pattern": "^.$"
            },
            "ReducedPieces": {
              "type": "integer"
            },
            "NewPriceInFiscalCurrency": {
              "type": "number"
            },
            "OldPriceInFiscalCurrency": {
              "type": "number"
            },
            "TotalPriceInFiscalCurrency": {
              "type": "number"
            },
            "NotePosition": {
              "type": "string",
              "pattern": "^.$"
            },
            "IBMSizeCode": {
              "type": "string",
              "pattern": "^.$"
            },
            "SizeScaleCode": {
              "type": "string",
              "pattern": "^.$"
            },
            "SDSSizeCode": {
              "type": "string",
              "pattern": "^.$"
            },
            "CorporateBrandId": {
              "type": "integer"
            },
            "ProductId": {
              "type": "string",
              "pattern": "[0-9]{7}"
            },
            "ArticleId": {
              "type": "string",
              "pattern": "[0-9]{3}"
            },
            "PriceTagProductNumber": {
              "type": "string",
              "pattern": "[0-9]{5}[0]"
            },
            "PriceTagArticleNumber": {
              "type": "string",
              "pattern": "[0-9]{2}"
            }
          }
        }
      }
    }
  }
}

